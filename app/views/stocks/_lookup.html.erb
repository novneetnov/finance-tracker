<div id="stock-lookup">
	<h3>Search for Stocks</h3>
	<%= form_tag search_stocks_path, remote: true, method: :get, id: "stock-lookup-form" do %>
		<div class="form-group row col-md-12 no-padding">
			<div class="col-md-10 no-padding">
				<%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true,
																	 class: 'form-control input-lg search-box' %>
			</div>
			<div class="col-md-2">
				<%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
					<i class="fa fa-search"> Look up a stock</i>
				<% end %>
			</div>
		</div>
	<% end %>
	<%= render 'common/spinner' %>
	<% if @stock %>
		<div id="stock-lookup-results" class="well results-block">
			<strong>Symbol: </strong><%= @stock.ticker %>
			<strong>Name: </strong><%= @stock.name %>
			<strong>Price: </strong><%= @stock.price %>
			<%= link_to "Add to my Portfolio", user_stocks_path(user: current_user, stock: @stock, stock_ticker: @stock.ticker, stock_id: @stock.id ? @stock.id : ""), method: :post, class: 'btn btn-xs btn-success' %>
		</div>
	<% end %>
	<div id="stock-lookup-errors"></div>
</div>
