<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Symbol</th>
			<th>Current Price</th>
			<% if @user == current_user %>
			<th>Actions</th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @stocks_of_user.each do |stock_of_user| %>
			<tr>
				<td><%= stock_of_user.name %></td>
				<td><%= stock_of_user.ticker %></td>
				<td><%= stock_of_user.last_price %></td>
				<% if @user == current_user %>
					<td>
						<%= link_to "Delete", user_stock_path(stock_of_user), 
																	method: :delete, 
																	data: {confirm: "Are you sure?"}, 
																	class: "btn btn-xs btn-danger" %>
					</td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
